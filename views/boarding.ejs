  <%- include ('./partials/headers.ejs') %>

        <div class="intro">
            <h1>Boarding Services</h1>
            <p>Our boarding services are designed to make your pet feel like they are right at home!</p>
        </div>

        <div class="boarding">
            <div class="board">
              <p class="board-heading">1 Dog</p>
              <p class="board-text">1-5 nights: $40/night</p>
              <p class="board-text">6+ nights: $35/night</p>
            </div>
            <div class="board">
              <p class="board-heading">2 Dogs</p>
              <p class="board-text">1-5 nights: $70/night</p>
              <p class="board-text">6+ nights: $65/night</p>
            </div>
            <div class="board">
